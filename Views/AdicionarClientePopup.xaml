<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    x:Class="CrudBTG.Views.AdicionarClientePopup"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit">
    <VerticalStackLayout
        Padding="20"
        BackgroundColor="White"
        HeightRequest="500"
        HorizontalOptions="Center"
        VerticalOptions="Center"
        WidthRequest="300">

        <Label
            FontAttributes="Bold"
            FontSize="20"
            HorizontalOptions="Center"
            Text="{Binding Titulo}" />

        <Label
            Margin="0,10,0,0"
            FontSize="14"
            Text="Name" />
        <Entry Placeholder="Digite o Name" Text="{Binding NameText}" />
        <Label
            FontSize="12"
            Text="{Binding NameErro}"
            TextColor="Red" />

        <Label
            Margin="0,10,0,0"
            FontSize="14"
            Text="LastName" />
        <Entry Placeholder="Digite o LastName" Text="{Binding LastNameText}" />
        <Label
            FontSize="12"
            Text="{Binding LastNameErro}"
            TextColor="Red" />

        <Label
            Margin="0,10,0,0"
            FontSize="14"
            Text="Idade" />
        <Entry
            Keyboard="Numeric"
            MaxLength="2"
            Placeholder="Digite a idade"
            Text="{Binding AgeText}" />

        <Label
            FontSize="12"
            Text="{Binding AgeErro}"
            TextColor="Red" />

        <Label
            Margin="0,10,0,0"
            FontSize="14"
            Text="Endereço (Cidade, UF, País)" />
        <Entry Placeholder="Cidade, UF, País" Text="{Binding EnderecoCompleto}" />

        <Label
            FontSize="12"
            Text="{Binding EnderecoErro}"
            TextColor="Red" />

        <HorizontalStackLayout
            Margin="0,20,0,0"
            HorizontalOptions="Center"
            Spacing="10">
            <Button Command="{Binding CancelarCommand}" Text="Cancelar" />
            <Button
                Command="{Binding SalvarCommand}"
                IsEnabled="{Binding IsSalvarEnabled}"
                Text="Salvar" />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</toolkit:Popup>